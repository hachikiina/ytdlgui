<Window x:Class="ytdlgui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ytdlgui"
        mc:Ignorable="d"
        Title="Dodgy YouTube MP3 Converter" Height="193.667" Width="330" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="urlBox" Margin="10,16,0,0" Height="25" TextWrapping="Wrap" Text="Enter the url here..." VerticalAlignment="Top" HorizontalAlignment="Left" Width="292"/>
        <Button x:Name="urlFetch" Content="Fetch" Height="25" Margin="10,46,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="292"/>
        <GroupBox Header="Settings" HorizontalAlignment="Left" Height="63" Margin="125,76,0,0" VerticalAlignment="Top" Width="177"/>
        <StackPanel x:Name="playlistC" HorizontalAlignment="Left" Height="51" VerticalAlignment="Top" Width="104" Margin="16,82,0,0">
            <CheckBox x:Name="correctbox" Content="Correct URL" IsEnabled="False" Height="18"/>
            <CheckBox x:Name="playlistbox" Content="Playlist" IsEnabled="False"/>
        </StackPanel>
        <Label x:Name="cmdOutput" Content="Enter a YouTube URL to begin." HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top" Height="31" Width="304" FontSize="9"/>

    </Grid>
</Window>
